{
  "name": "image-host",
  "version": "1.0.0",
  "main": "index.js",
  "bin": "dist/server/app.js",
  "pkg": {
    "scripts": [
      "dist/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64"
    ],
    "outputPath": "release"
  },
  "scripts": {
    "start:server": "cross-env NODE_ENV=development tsx src-node/app.ts",
    "start:client": "cross-env NODE_ENV=development webpack serve --config webpack/client.config.dev.js",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack/server.config.js",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack/client.config.prod.js",
    "build": "cross-env NODE_ENV=production npm run build:client && npm run build:server",
    "release": "cross-env NODE_ENV=production npm run build && pkg ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/log4js": "^2.3.5",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.22",
    "babel-loader": "^10.0.0",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^10.1.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^7.1.2",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.5",
    "node-polyfill-webpack-plugin": "^4.1.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "sass-loader": "^16.0.6",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "text-encoding": "^0.7.0",
    "ts-loader": "^9.5.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "util": "^0.12.5",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "log4js": "^6.9.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.94.2",
    "uuid": "^13.0.0"
  }
}
